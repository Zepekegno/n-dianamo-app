{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist",
    "rootDir":"./src",
    "lib": ["es6"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl":".",
    "paths":{
      "*":["src/*"],
      "test":["tests/*"],
      "@components/*":["src/components/*"],
    },
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}